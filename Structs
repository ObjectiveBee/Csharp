// Структуры //
// тип struct является типом значений, который обычно используется для инкапсуляции небольших групп связанных переменных
strcut Book
{
	public string title;
	public double price;
	public string author;
}
// Структуры ограничены, в отличии от классов
// Структуры могут быть создаты без использования оператора new
static void Main(string[] args)
{
	Book b;
	b.title = "Test";
	b.price = 5.99;
	b.author = "David";
	
	Console.WriteLine("b.title");
}
// Структуры НЕ поддерживают наследование и не могут содержать виртуальные методы
// - могут содержать методы, свойства, индексатора и тд.
// - НЕ могут хранить конструкторы БЕЗ параметров, в этом случае используется слово new
struct Point
{
	public int x;
	public int y;
	public Point(int x, int y)
	{
		this.x = x;
		this.y = y;
	}
}
static void Main(string[] args)
{
	Point p = new Point(10, 15);
	Console.WriteLine(p.x);
}

// Отличия от классов
- структуры больше подходят к небольшому количеству инфомации, состоящей по большей мере из данных,
которые не предназначены для модификации после создания структуры.

// Все стандартные типы int, double, bool, char и тд. являются структурами.
