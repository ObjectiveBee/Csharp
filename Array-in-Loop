// Цикл foreach
foreach (int k in a)
{
	Console.WriteLine(k);
}
// Цикл foreach итерирует по массиву а и присваивает значение текущего элемента к переменной к при каждой интерации цикла.
// Тип данных переменной в цикле foreach должен соответсвовать типу элементов массива.
// Часто ключевое слово var используется в качестве типа переменной
// Example
int[] arr = {11, 35, 62, 555, 989};
int sum = 0;
foreach (var x in arr)
{
	sum += x;
}

