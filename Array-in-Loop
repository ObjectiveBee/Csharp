// Объявление массивов #Array
int[] myArray = new int[6]; // 1
int[] myArray = new int[6] {1, 2, 3, 4, 5, 6}; // 2
int[] myArray = new int[] {1, 2, 3, 4, 5, 6}; // 3
string[] names = new string[] {"John", "Mary", "Jessica"}; // 4
double[] numbers = {4.5, 3.6, 12.7, 10}; // 5

